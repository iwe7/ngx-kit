{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "ui-base"
  },
  "apps": [
    {
      "name": "ngx-kit",
      "root": "packages/ngx-kit",
      "appRoot": "src"
    },
    {
      "name": "playground",
      "root": "playground",
      "outDir": "dist",
      "index": "index.html",
      "main": "main.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "assets": [
        "favicon.ico"
      ]
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "package/tsconfig.package.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "package/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "playground/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "schematics": {
      "collection": "@ngx-kit/schematics"
    },
    "styleExt": "scss",
    "component": {}
  }
}

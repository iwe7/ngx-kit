{
  "name": "ngx-kit",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:clean && npm run build:ngc && npm run build:release && npm run build:rollup:es && npm run build:rollup:umd",
    "build:clean": "rimraf ./dist",
    "build:ngc": "ngc",
    "build:rollup:es": "rollup -c rollup.es.config.js",
    "build:rollup:umd": "rollup -c rollup.umd.config.js",
    "build:release": "node release.js",
    "build-and-copy": "npm run build && node ./dev/dev-copy.js",
    "publish": "npm publish ./dist/package --access=public",
    "release": "npm run build && npm run publish"
  },
  "private": true,
  "dependencies": {
  },
  "devDependencies": {
    "@angular/animations": "^4.2.4",
    "@angular/common": "^4.2.4",
    "@angular/compiler": "^4.2.4",
    "@angular/compiler-cli": "^4.2.4",
    "@angular/core": "^4.2.4",
    "@angular/forms": "^4.2.4",
    "@angular/http": "^4.2.4",
    "@angular/platform-browser": "^4.2.4",
    "@angular/platform-browser-dynamic": "^4.2.4",
    "@angular/router": "^4.2.4",
    "@ngx-kit/styler": "^1.0.0-beta.3",
    "fs-extra": "^3.0.1",
    "moment": "^2.18.1",
    "ncp": "^2.0.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.43.0",
    "rxjs": "^5.4.1",
    "typescript": "^2.4.1",
    "zone.js": "^0.8.12"
  }
}

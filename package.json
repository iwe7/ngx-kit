{
  "name": "ngx-kit-core",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "release": "npm run release:clean && npm run release:ngc && npm run release:rollup && npm run release:copy:pkg && npm run release:copy:readme",
    "release:clean": "rimraf ./dist",
    "release:ngc": "ngc -p tsconfig.json",
    "release:rollup": "rollup -c rollup.config.js",
    "release:copy:pkg": "ncp ./src/package.json ./dist/package.json",
    "release:copy:readme": "ncp ./README.md ./dist/README.md",
    "release:publish": "npm publish ./dist --access=public"
  },
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@angular/compiler": "^4.0.3",
    "@angular/compiler-cli": "^4.0.3",
    "@angular/core": "^4.0.3",
    "ncp": "^2.0.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rxjs": "^5.3.0",
    "typescript": "~2.2.0",
    "zone.js": "^0.8.8"
  }
}

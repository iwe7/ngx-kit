{
  "name": "@ngx-kit/website-src",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "ng serve",
    "build": "ng build --aot --output-hashing=all -sri --prod",
    "test": "ng test",
    "lint": "ng lint --format=stylish --type-check",
    "e2e": "ng e2e",
    "packages:init": "git clone git@github.com:ngx-kit/ngx-kit.git ./src/packages/ngx-kit && git clone git@github.com:ngx-kit/ui-base.git ./src/packages/ui-base",
    "packages:update": "rimraf ./src/packages && npm run packages:init && git --work-tree=./src/packages/ngx-kit --git-dir=./src/packages/ngx-kit/.git pull && git --work-tree=./src/packages/ui-base --git-dir=./src/packages/ui-base/.git pull",
    "packages:gen-docs": "ngx-kit gen-docs ./src/packages/ngx-kit && ngx-kit gen-docs ./src/packages/ui-base",
    "serve-aot": "ng serve --aot",
    "uni:build": "ng build --prod --app=server -oh=none",
    "uni:serve": "node server",
    "docker:build": "docker build -t dhub.nvx.me:443/ngx-kit-website-prod .",
    "docker:run": "docker run -d -p 8002:8000 dhub.nvx.me:443/ngx-kit-website-prod",
    "docker:push": "docker push dhub.nvx.me:443/ngx-kit-website-prod",
    "deploy": "npm run build && npm run uni:build && npm run docker:build && npm run docker:push"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.4.6",
    "@angular/common": "^4.4.6",
    "@angular/compiler": "^4.4.6",
    "@angular/core": "^4.4.6",
    "@angular/forms": "^4.4.6",
    "@angular/http": "^4.4.6",
    "@angular/platform-browser": "^4.4.6",
    "@angular/platform-browser-dynamic": "^4.4.6",
    "@angular/platform-server": "^4.4.6",
    "@angular/router": "^4.4.6",
    "@nguniversal/express-engine": "^1.0.0-beta.3",
    "@nguniversal/module-map-ngfactory-loader": "^1.0.0-beta.3",
    "@ngx-kit/ngx-kit": "^1.0.0-beta.9",
    "@ngx-kit/styler": "^1.0.0-beta.15",
    "@nvxme/ngx-md-render": "^1.0.0-alpha.4",
    "core-js": "^2.5.1",
    "enhanced-resolve": "^3.4.1",
    "express": "^4.16.2",
    "front-matter": "^2.2.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.0",
    "walk": "^2.3.9",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@angular/cli": "^1.5.0-rc.3",
    "@angular/compiler-cli": "^4.4.6",
    "@angular/language-service": "^4.4.6",
    "@angularclass/hmr": "^2.1.3",
    "@types/jasmine": "^2.5.53",
    "@types/node": "^8.0.46",
    "codelyzer": "^3.1.2",
    "cpx": "^1.5.0",
    "fs-extra": "^4.0.2",
    "jasmine-core": "^2.7.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ncp": "^2.0.0",
    "protractor": "^5.2.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3"
  }
}

{
  "name": "ngx-kit-src",
  "version": "1.0.0-rc.0",
  "license": "MIT",
  "scripts": {
    "serve:core": "ng serve -a=playground-core",
    "serve:collection": "ng serve -a=playground-collection",
    "serve:website": "ng serve -a=website",
    "build:clean": "rimraf ./dist",
    "build:core": "npm run build:core:clean && npm run build:core:ngc && npm run build:core:release && npm run build:core:rollup",
    "build:core:clean": "rimraf ./dist/clean",
    "build:core:ngc": "ngc -p ./packages/core/tsconfig.build.json",
    "build:core:rollup": "npm run build:core:rollup:es && npm run build:core:rollup:umd",
    "build:core:rollup:es": "rollup -c ./packages/core/rollup.es.config.js",
    "build:core:rollup:umd": "rollup -c ./packages/core/rollup.umd.config.js",
    "build:core:release": "node ./packages/core/release",
    "build:core:publish": "publish-build.sh core",
    "build:collection": "npm run build:collection:clean &&  && npm run build:schematize && npm run build:tsc",
    "build:collection:clean": "rimraf ./dist/collection",
    "build:collection:release": "node ./packages/collection/release",
    "build:collection:schematize": "ngx-kit schematize ./packages/collection/.schematize-schema.json",
    "build:collection:tsc": "tsc -p ./dist/collection/release/tsconfig.json",
    "build:collection:publish": "publish-build.sh collection",
    "build:schematics": "npm run build:clean && tsc -p ./packages/schematics/tsconfig.json && node release-schematics",
    "gen-docs": "npm run gen-docs:core && npm run gen-docs:collection",
    "gen-docs:core": "ngx-kit gen-docs ./packages/core ./website/assets/docs",
    "gen-docs:collection": "ngx-kit gen-docs ./packages/collection ./website/assets/docs",
    "publish": "npm publish ./dist/release --access=public",
    "release": "npm run test && npm run lint && npm run build && npm run publish",
    "test": "ng test -a=playground -sr",
    "test:local": "ng test -a=playground",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.0",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/language-service": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@ngx-kit/styler": "^1.0.0-beta.15",
    "@nvxme/ngx-md-render": "^1.0.0-alpha.5",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@angular-devkit/core": "0.0.20",
    "@angular-devkit/schematics": "0.0.35",
    "@angular/cli": "^1.5.0",
    "@angular/platform-server": "^5.0.1",
    "@angularclass/hmr": "^2.1.3",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.5",
    "@ngx-kit/schematics": "^1.0.0-alpha.6",
    "@types/jasmine": "^2.6.3",
    "@types/node": "^8.0.50",
    "codelyzer": "^4.0.1",
    "core-js": "^2.5.1",
    "fs-extra": "^4.0.2",
    "jasmine": "^2.8.0",
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ncp": "^2.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.51.0",
    "tslint": "^5.8.0",
    "typescript": "~2.4.2"
  }
}

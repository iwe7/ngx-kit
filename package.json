{
  "name": "ngx-kit-src",
  "version": "1.0.0-beta.5",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:clean && npm run build:ngc && npm run build:release && npm run build:rollup:es && npm run build:rollup:umd",
    "build:clean": "rimraf ./dist",
    "build:ngc": "ngc -p ./package/tsconfig.package.json",
    "build:rollup:es": "rollup -c rollup.es.config.js",
    "build:rollup:umd": "rollup -c rollup.umd.config.js",
    "build:release": "node release",
    "build-and-copy": "npm run build && ngx-kit copy",
    "publish": "npm publish ./dist/release --access=public",
    "release": "npm run test && npm run build && npm run publish",
    "test": "karma start ./karma.conf.js --browsers Firefox --single-run",
    "test:local": "karma start ./karma.conf.js",
    "lint": "./node_modules/.bin/tslint -c tslint.json 'package/**/*.ts'",
    "dev": "webpack-dev-server --progress --config ./dev/webpack.playground.js"
  },
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@angular/animations": "^4.3.5",
    "@angular/common": "^4.3.5",
    "@angular/compiler": "^4.3.5",
    "@angular/compiler-cli": "^4.3.5",
    "@angular/core": "^4.3.5",
    "@angular/forms": "^4.3.5",
    "@angular/http": "^4.3.5",
    "@angular/platform-browser": "^4.3.5",
    "@angular/platform-browser-dynamic": "^4.3.5",
    "@angular/router": "^4.3.5",
    "@ngx-kit/styler": "^1.0.0-beta.13",
    "@types/jasmine": "^2.5.53",
    "@types/node": "^8.0.23",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.2.3",
    "codelyzer": "^3.1.2",
    "core-js": "^2.5.0",
    "fs-extra": "^4.0.1",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "jasmine": "^2.7.0",
    "jasmine-core": "^2.7.0",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-webpack": "^2.0.4",
    "moment": "^2.18.1",
    "ncp": "^2.0.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.47.6",
    "rxjs": "^5.4.3",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1",
    "zone.js": "^0.8.16"
  }
}

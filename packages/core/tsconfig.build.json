{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "../../dist/core/build",
    "declaration": true,
    "declarationDir": "../../dist/core/release"
  },
  "angularCompilerOptions": {
    "genDir": "../../dist/core/build",
    "annotateForClosureCompiler": false,
    "strictMetadataEmit": true,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "@ngx-kit/core",
    "skipTemplateCodegen": true
  },
  "files": [
    "./public_api.ts"
  ],
  "exclude": [
    "./**/*.spec.ts"
  ]
}

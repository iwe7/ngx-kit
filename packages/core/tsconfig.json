{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "../../dist/build",
    "declaration": true,
    "declarationDir": "../../dist/release"
  },
  "angularCompilerOptions": {
    "genDir": "../../dist/build",
    "skipTemplateCodegen": true,
    "skipMetadataEmit": false,
    "strictMetadataEmit": true,
    "annotateForClosureCompiler": true,
    "flatModuleOutFile": "ngx-kit.js",
    "flatModuleId": "@ngx-kit/ngx-kit"
  },
  "files": [
    "./public_api.ts"
  ],
  "exclude": [
    "../../node_modules",
    "../../dist",
    "./src/**/*.spec.ts"
  ]
}

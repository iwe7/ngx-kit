{
  "angularCompilerOptions": {
    "genDir": "./dist/package",
    "skipTemplateCodegen": true,
    "skipMetadataEmit": false,
    "strictMetadataEmit": true,
    "annotateForClosureCompiler": true,
    "flatModuleOutFile": "ngx-kit.js",
    "flatModuleId": "@ngx-kit/ngx-kit"
  },
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "baseUrl": ".",
    "rootDir": "./package",
    "outDir": "./dist/package",
    "paths": {
      "@ngx-kit/styler": [
        "./node_modules/@ngx-kit/styler"
      ]
    }
  },
  "files": [
    "./package/public_api.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "package/src/**/*.spec.ts"
  ]
}
